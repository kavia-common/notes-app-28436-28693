# Security
SECRET_KEY=please-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Database (async SQLAlchemy URL)
# Format: postgresql+asyncpg://<user>:<password>@<host>:<port>/<db>
DATABASE_URL=postgresql+asyncpg://notes_user:notes_password@db:5432/notes_db

# CORS
# Comma separated origins. Use * for all.
CORS_ALLOW_ORIGINS=*

# External Summarization API
SUMMARIZATION_API_URL=https://api.example.com/api/v1
SUMMARIZATION_API_TOKEN=replace-with-token
