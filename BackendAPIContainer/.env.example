# JWT Authentication
SECRET_KEY=CHANGE_ME_IN_PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=500
ALGORITHM=HS256

# Database Configuration
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://appuser:dbuser123@localhost:5001/myapp

# CORS Configuration
# Comma-separated list of allowed origins
# Examples: http://localhost:3000 or http://localhost:3000,https://app.example.com
CORS_ALLOW_ORIGINS=http://localhost:3000

# AI Summarization Service
SUMMARIZATION_API_URL=http://localhost:3001
SUMMARIZATION_API_TOKEN=dev-ai-token

# Preview Mode
# Set to 'true' to allow unauthenticated access to /notes endpoints (for testing/preview)
# Set to 'false' in production to enforce JWT authentication
PREVIEW_NO_AUTH=true

# Application Settings
LOG_LEVEL=info
ENV=development
